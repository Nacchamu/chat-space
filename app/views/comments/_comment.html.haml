%div.right-content__under-box__comment-box{data: {id: comment.id}}
  %p.right-content__under-box__comment-box__user-name= comment.user.name
  %p.right-content__under-box__comment-box__datetime= comment.created_at.strftime('%Y年%m月%d日 %H時%M分')
  %p.right-content__under-box__comment-box__comment= comment.comment
